<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/Views/login.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>loginHandler</servlet-name>
    <servlet-class>Controllers.LoginHandler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginHandler</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>orderconfirmed</servlet-name>
    <servlet-class>Controllers.OrderConfirmedHandler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>orderconfirmed</servlet-name>
    <url-pattern>/confirmOrder</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegisterHandler</servlet-name>
    <servlet-class>Controllers.RegisterHandler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterHandler</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>HomeHandler</servlet-name>
    <servlet-class>Controllers.HomeHandler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeHandler</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>Models.Initializer</listener-class>
  </listener>
</web-app>
